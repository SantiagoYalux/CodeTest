@model List<Mascota>

<section class="ClientPets">
    @if(Model.Count > 0)
    {
        
    @foreach (var a in Model)
    {
        <article class="ClientPetsItem">
            <div class="imgDiv">
                @*<img src="/Images/@a.MascotaImg" class="petImg">*@

                    @if (@a.MascotaImg != null)
                    {
                        <img src="/Images/@a.MascotaImg" alt="@a.MascotaNombre" title="@a.MascotaNombre" class="petImg">
                    }
                    else
                    {

                        @if (@a.MascotaTipo == "P")
                        {
                            <img src="/Images/perroDefault.png" alt="@a.MascotaNombre" title="@a.MascotaNombre" class="petImg">
                        }
                        else
                        {
                            <img src="/Images/GatoDefault.png" alt="@a.MascotaNombre" title="@a.MascotaNombre" class="petImg">
                        }

                    }

                <p>@a.MascotaNombre</p>
            </div>

            <div class="petData">
                <p>Edad: @a.MascotaEdad años</p>
                <p>Tipo: @a.MascotaTipo</p>
                <p>Peso: @a.MascotaPeso kg</p>
                <p>Castrado: @a.MascotaCastrado</p>
            </div>

            <div class="petOrdersData">
                <p class="dataOrder">Pedidos</p>
                <img src="/Images/flecha.png" alt="" class="watchOrders">
            </div>
            </article>
        }

    }
    else
    {
     <p>No tiene mascotas</p>   
    }
</section>